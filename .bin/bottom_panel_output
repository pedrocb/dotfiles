. ~/.bin/lemonbar_config

workspaces(){
    i3-msg -t get_workspaces | python ~/.bin/lemonbar_workspaces.py | sed 's/color1/'$FOCUSED_WORKSPACE_COLOR'/g' |  sed 's/color2/'$UNFOCUSED_WORKSPACE_COLOR'/g' | sed 's/color3/'$EMPTY_WORKSPACE'/g'
}

while true; do
    MESSAGE="%{c}$(workspaces)"
    echo -e "$MESSAGE"
done
