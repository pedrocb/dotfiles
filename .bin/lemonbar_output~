#!/bin/bash
. ~/.bin/lemonbar_config

clock() {
    CLOCK="$(date +"%R")"
    DATE="$(date +"%d/%m/%Y")"
    echo -e "\uf073 "$DATE"    \uf017" $CLOCK
}

wifi(){
    WIFI_SIGNAL="$(awk "NR==3 {print int((\$3/70)*100)}" /proc/net/wireless)"
    echo "\uf1eb  "$WIFI_SIGNAL"%"
}

PADDING="  "

while true; do
    BAR_INPUT="%{B#11ffffff}$PADDING$(wifi)$PADDING%{B#00000000}%{c}%{B#11ffffff}$PADDING$(clock)$PADDING%{B#00000000}"
    echo -e "$BAR_INPUT"
    sleep 1
done
